namespace OP;

//	...
$args = OP()->Router()->Args();
$cate = $args[0] ?? null;
$unit = $args[1] ?? null;
$name = $args[2] ?? null;
$file = $args[3] ?? null;

?>
<section>
	<div id="develop">
		<div class="flex">
			<div>
			<?php
			//	...
			switch( $cate ){
				//	...
				case 'phpinfo':
					include('phpinfo.php');
					break;

				case 'reference':
					$ext = 'md';
					break;

				case 'admin':
				case 'testcase':
					$ext = 'php';
					break;

				//	...
				default:
			}

			//	...
			if( $file ){
				$path = "{$unit}:/{$name}/{$cate}/{$file}.{$ext}";
				if( $ext === 'md' ){
					OP()->Markdown($path);
				}else{
					OP()->Template($path);
				}
			}
			?>
			</div>
		</div>
	</div>
</section>

<?php if( OP::Config('execute')['markdown'] ): ?>
<!-- markdown -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<?php OP()->WebPack()->Auto('./webpack/markdown.*'); ?>
<?php endif; ?>

